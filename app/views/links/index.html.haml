%table{:width => "900px", :border => "0", :align => "center", :bordercolor => "#336699", :cellpadding => "2", :cellspacing => "2" }  
  %tr
    %td
      %table{:width => "900px", :border => "0" }
        %tr{ :align => "Left" }
          %th
            %h2= 'Ссылка'
          %th
            %h2= 'Состояние'
          %th
            %h2= 'Download'
        - @links.each do |link|
          %tr{ :align => "Left" }
            %td= link_to link.url, link.url
            %td= link.status
            %td= link_to 'Скачать файл', absolute_url('files/' + link.file_path) if link.downloaded?