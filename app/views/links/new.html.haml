%div{:style => "width:985px", :align => "center"}
  %script{ :src => "http://yabloko.kg/rotator/graphic.php?id=78" }

%div{:style => "width:985px; height:480px; max-width:985px; max-height:480px align=\"left\""}
  %table{:align=> "center", :width => "985px", :height =>"20px", :border=>"0px"}
    %tr
      %td{:valign => "bottom", :align => "center"}
        = link_to " Журнал закачек", resource(:links)
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        = link_to "Поиск", url(:controller => "search", :action => "index")
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        = link_to "Аудио",  url(:controller => "search", :action => "audio")
        %img{:src =>"/images/new.gif"}
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        = link_to "Видео",  url(:controller => "search", :action => "video")
        %img{:src =>"/images/new.gif"}
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        %a{ :href => "http://pump.kg/reklama.html", :style => " color:#c55" }
          %span{ :style => "color:#c55" }
            Реклама на сайте
        %br
        %br

    %tr{:align=> "center", :height => "350px"}
      %td{:width => "985px", :valign => "top"}
        %p{ :style => "font:Arial, Helvetica, sans-serif; font-size:12px; color: #666666" }
          Уважаемые пользователи!
          %br
          Ресурс
          %span{ :style => "color:#990000;" }
            www.pump.kg
          нуждается в спонсоре, в этой связи сервис по скачиванию файлов с внешнего мира временно не доступен.
          %br
          В данный момент на сайте доступны только ранее скачанные файлы.
          %br
          Приносим свои извенения.
          %br
          С любыми предложениями по сотрудничеству обращайтесь в
          %a{ :href => "mailto:pump.kg@mail.ru", :style => "color: rgb(0, 0, 255);" }
            администрацию.
        = form_for @link, :action => resource(:links) do
          %br
          %h2 Ограничение на размер файла - 300 Мб
          %p{:style =>" font-weight:bold; font-size:10pt"}
            %b
              = "URL:"
          %p{:align=> "center"}
            = text_field :url, :size => "100", :maxlength => "250"
          %p{:style =>" font-weight:bold; font-size:10pt"}
            %b
              = "Описание:"
          %p{:align=> "center"}
            = text_field :description, :size => "100", :maxlength => "250"
          %p{:align=> "center"}
            %img{:src =>"http://captchator.com/captcha/image/" + session.session_id}
          %p{:style =>" font-weight:bold; font-size:10pt"}
            %b
              = "Капча:"
          %p{:align=> "center"}
            = text_field :captcha_value, :size => "10", :maxlength => "10"

          %p{:align=> "center"}
            = text_field :captcha_val, :value => session.session_id , :type => "hidden", :size => "50", :maxlength => "50"

          %p{:align =>"center"}
            = submit "Добавить ссылку"
          %br
          %h4
            = error_messages_for @link, :header => "<h4>Ошибка</h4>"
            = @error
        
        
        

